# NeoWs Service Environment Variables
# Copy this file to .env and fill in your actual values

# NASA API Configuration
# Get your free API key from: https://api.nasa.gov/
# This key is used to fetch asteroid data from NASA's Near-Earth Object API
NASA_API_KEY=your_nasa_api_key_here

# Kafka Configuration
# Kafka broker addresses (comma-separated for multiple brokers)
# For local development, typically localhost:9092
# For production, use your actual Kafka cluster addresses
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Kafka topic for asteroid alerts
# This topic will receive asteroid collision events
KAFKA_TOPIC_ASTEROID_ALERT=asteroid-alert

# Application Configuration
# Server port (default: 8080)
# SERVER_PORT=8080

# Application name
# SPRING_APPLICATION_NAME=NeoWs

# Logging Configuration
# Root logging level (default: INFO)
# LOGGING_LEVEL_ROOT=INFO

# NeoWs service logging level (default: INFO)
# LOGGING_LEVEL_COM_ONION_NEO_WS=DEBUG

# Kafka logging level (default: WARN)
# LOGGING_LEVEL_ORG_APACHE_KAFKA=WARN

# Spring Kafka logging level (default: INFO)
# LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_KAFKA=INFO

# Swagger/OpenAPI Configuration
# API documentation path (default: /api-docs)
# SPRINGDOC_API_DOCS_PATH=/api-docs

# Swagger UI path (default: /swagger-ui.html)
# SPRINGDOC_SWAGGER_UI_PATH=/swagger-ui.html

# Actuator Configuration
# Health endpoint details visibility (default: when-authorized)
# MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized

# Exposed actuator endpoints (default: health,info,prometheus)
# MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,prometheus
